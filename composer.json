{
    "name": "codekipple/wordpress-site",
    "description": "WordPress Project",
    "authors": [
        {
            "name": "codekipple"
        }
    ],
    "type": "project",
    "repositories": [
        {
            "type"   : "package",
            "package": {
                "name"   : "wordpress/wordpress",
                "type"   : "wordpress-core",
                "version": "3.8.1",
                "dist"   : {
                    "url" : "http://wordpress.org/wordpress-3.8.1.zip",
                    "type": "zip"
                },
                "source" : {
                    "url"  : "https://github.com/WordPress/WordPress",
                    "type" : "git",
                    "reference": "3.8.1"
                },
                "require": {
                    "johnpbloch/wordpress-core-installer": "~0.1"
                }
            }
        }
    ],
    "require": {
        "php": ">=5.4",
        "wordpress/wordpress": ">=3.8.1",
        "imagine/imagine": "~0.5.0"
    },
    "extra" : {
        "installer-paths" : {
            "web/content/plugins/{$name}/": ["type:wordpress-plugin"]
        },
        "wordpress-install-dir": "web/wordpress"
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": { "": "src/" }
    }
}